{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "injectdll",
            "command": "g++",
            "args": [
                "-o",
                "injectdll.dll",
                "-shared",
                "injectdll.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "injectmain",
            "command": "g++",
            "args": [
                "-o",
                "injectexe.exe",
                "-g",
                "injectexe.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}