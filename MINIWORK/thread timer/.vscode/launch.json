    "version": "0.2.0",
    "configurations": [
        {
            "name": "直接启动",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        
        {
            "name": "编译 并 cmd 启动",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd",
            "args": ["/k", "${fileBasenameNoExtension}"], // "/k", 
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "${defaultBuildTask}" 
            
        }
    ]
}