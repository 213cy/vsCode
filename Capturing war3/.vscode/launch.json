    "version": "0.2.0",
    "configurations": [
      
        {
            "name": "gdb 调试",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\capture.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "${defaultBuildTask}"
        },

        {
            "name": "启动exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "capture.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}